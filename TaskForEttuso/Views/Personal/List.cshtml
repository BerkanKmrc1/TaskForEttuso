@using CleanArchitecture.Domain.Models
@model List<Personal>

@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h3>Kişi Listesi</h3>
<br />
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Kişi Adı</th>
        <th>Kişi Soyadı</th>
        <th>Kişi Doğum Tarihi</th>
        <th>Kişi Maili</th>
        <th>Kişi Telefon Numarası</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PersonalId</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.BirthDay</td>
            <td>@item.Email</td>
            @*<td>@item.PhoneId</td>*@
            <td><button class="btn btn-success">Güncelle</button></td>

        </tr>

    }




</table>
<br />
<a href="/Category/AddCategory" class="btn btn-info">Yeni Kategori</a>